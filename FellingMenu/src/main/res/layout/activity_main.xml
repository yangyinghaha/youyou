<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">
<android.support.v4.view.ViewPager
    android:id="@+id/pager_main"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"/>
<RadioGroup
    android:id="@+id/radio_tab"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">

    <RadioButton
        style="@style/radio_style"
        android:layout_height="wrap_content"
        android:text="主页"
        android:drawableTop="@drawable/homepager_checked"
        android:id="@+id/radioButton1"
         />
    <RadioButton
        style="@style/radio_style"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/kitchen_checked"
        android:paddingRight="5dp"
        android:text="营养餐桌"
        android:id="@+id/radioButton2"
        />
    <RadioButton
        style="@style/radio_style"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/nutritiontable_checked"
        android:text="厨房宝典"
        android:id="@+id/radioButton3"
        />
    <RadioButton
        style="@style/radio_style"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/search_checked"
        android:text="搜索"
        android:id="@+id/radioButton4"
        />
    <RadioButton
        style="@style/radio_style"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/more_checked"
        android:text="更多"
        android:id="@+id/radioButton5"
        />
</RadioGroup>
</LinearLayout>
